{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": false,
    //"noEmitHelpers": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,
    "sourceMap": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "types": [
      //"webpack-env",
      "@dcloudio/types/uni-app"
    ],
    "paths": {
      // "@/*": [
      //   "./src/*"
      // ]
    },
    "lib": [
      "esnext",
       "dom",
      // "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "unpackage",
    "src/**/*.nvue",
    "dist",
    "demo"
  ],
  "compileOnSave": true
}
