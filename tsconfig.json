{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ESNext",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators":true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      //"webpack-env",
      "@dcloudio/types/uni-app"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "node_modules",
    "unpackage",
    "src/**/*.nvue",
    "dist"
  ],
  "compileOnSave": true
}
